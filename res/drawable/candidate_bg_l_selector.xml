<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
    	<shape xmlns:android="http://schemas.android.com/apk/res/android" >
    		<corners android:bottomLeftRadius="10dip" android:bottomRightRadius="0dp" android:topLeftRadius="10dip" android:topRightRadius="0dp" />
			<solid android:color="@color/bottom_candidate_bg_pressed" />
		</shape>    
    </item>
    <item android:state_pressed="false" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android" >
    		<corners android:bottomLeftRadius="10dip" android:bottomRightRadius="0dp" android:topLeftRadius="10dip" android:topRightRadius="0dp" />
			<solid android:color="@color/bottom_candidate_bg_normal" />
		</shape>
    </item>
</selector>
