<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
    	<shape xmlns:android="http://schemas.android.com/apk/res/android" >
    		<corners android:bottomLeftRadius="0dip" android:bottomRightRadius="0dip" android:topLeftRadius="0dip" android:topRightRadius="0dip" />
			<solid android:color="@color/bottom_candidate_bg_pressed" />
			<stroke android:width="0.5dp" android:color="@color/bottom_candidate_border"/>
		</shape>    
    </item>
    <item android:state_pressed="false" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android" >
    		<corners android:bottomLeftRadius="0dip" android:bottomRightRadius="0dip" android:topLeftRadius="0dip" android:topRightRadius="0dip" />
			<solid android:color="@color/bottom_candidate_bg_normal" />
			<stroke android:width="0.5dp" android:color="@color/bottom_candidate_border"/>
		</shape>
    </item>
</selector>
