<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
    	<shape>
			<solid android:color="@color/btn_chat_send_pressed" />
			<corners android:radius="3dp" />
			<stroke android:width="0.5dp" android:color="@color/v5_btn_send_textcolor" />
		</shape>   
    </item>
    <item android:state_pressed="false" >
        <shape>
			<solid android:color="@color/btn_chat_send_normal" />
			<corners android:radius="3dp" />
			<stroke android:width="0.5dp" android:color="@color/v5_btn_send_textcolor" />
		</shape>
    </item>

</selector>
