<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true" android:state_pressed="false">
        <shape>
            <solid android:color="@color/white" />

            <stroke android:width="@dimen/dialog_border_width" android:color="@color/dialog_option_item_boder" />

            <corners android:bottomLeftRadius="@dimen/option_btn_radius" android:bottomRightRadius="@dimen/option_btn_radius" android:topLeftRadius="@dimen/option_btn_radius" android:topRightRadius="@dimen/option_btn_radius" />

        </shape>
    </item>
    
    <item android:state_enabled="true" android:state_pressed="true">
        <shape>
            <solid android:color="@color/base_item_select" />

            <stroke android:width="@dimen/dialog_border_width" android:color="@color/dialog_option_item_boder" />

            <corners android:bottomLeftRadius="@dimen/option_btn_radius" android:bottomRightRadius="@dimen/option_btn_radius" android:topLeftRadius="@dimen/option_btn_radius" android:topRightRadius="@dimen/option_btn_radius" />

        </shape>
    </item>

</selector>
