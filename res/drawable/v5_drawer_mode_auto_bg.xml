<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
    	<shape xmlns:android="http://schemas.android.com/apk/res/android" >
		    <solid android:color="@color/white" />
		    <stroke android:width="1dp" android:color="#D3D3D3" />
		    <corners
		        android:bottomLeftRadius="@dimen/drawer_mode_btn_radius"
		        android:bottomRightRadius="@dimen/drawer_mode_btn_radius"
		        android:topLeftRadius="@dimen/drawer_mode_btn_radius"
		        android:topRightRadius="@dimen/drawer_mode_btn_radius" />
		    <padding 
		        android:left="@dimen/drawer_mode_btn_padding_h"
		        android:top="@dimen/drawer_mode_btn_padding_v"
		        android:right="@dimen/drawer_mode_btn_padding_h"
		        android:bottom="@dimen/drawer_mode_btn_padding_v" />
		</shape>    
    </item>
    <item android:state_pressed="false" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android" >
		    <solid android:color="@color/white" />
		    <stroke android:width="1dp" android:color="#D3D3D3" />
		    <corners
		        android:bottomLeftRadius="@dimen/drawer_mode_btn_radius"
		        android:bottomRightRadius="@dimen/drawer_mode_btn_radius"
		        android:topLeftRadius="@dimen/drawer_mode_btn_radius"
		        android:topRightRadius="@dimen/drawer_mode_btn_radius" />
		    <padding 
		        android:left="@dimen/drawer_mode_btn_padding_h"
		        android:top="@dimen/drawer_mode_btn_padding_v"
		        android:right="@dimen/drawer_mode_btn_padding_h"
		        android:bottom="@dimen/drawer_mode_btn_padding_v" />
		</shape>
    </item>
</selector>
