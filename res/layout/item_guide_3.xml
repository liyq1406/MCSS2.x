<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    android:id="@+id/id_guide_layout0"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md2x_guide_bg"
    android:orientation="vertical"
    android:weightSum="10" >
        
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" />
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3" >
        
        <ImageView
            android:id="@+id/guide_top_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_guide3_top"
            android:scaleType="fitCenter"
            android:contentDescription="@string/contentDescription" />
        
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" >
        
        <ImageView
            android:id="@+id/guide_center_iv"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_guide3_center"
            android:scaleType="centerCrop"
            android:contentDescription="@string/contentDescription" />
        
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
     	android:layout_height="0dp"
     	android:layout_weight="3"
     	android:layout_gravity="center_horizontal|bottom"
     	android:gravity="center"
        android:orientation="horizontal" >
        
        <LinearLayout
	        android:layout_width="wrap_content"
	     	android:layout_height="wrap_content"
	        android:orientation="horizontal" >
	        
	        <ImageView
				android:id="@+id/guide_bottom_left_iv"
				android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	        	android:layout_marginRight="16dp"
	        	android:layout_marginEnd="16dp"
				android:src="@drawable/ic_guide3_bottom_left"
				android:scaleType="fitCenter"
				android:contentDescription="@string/contentDescription" />
	        
	        <View
	            android:layout_width="1dp"
	            android:layout_height="match_parent"
	            android:layout_marginTop="4dp"
	            android:layout_marginBottom="4dp"
	            android:background="#0f9dda" />
	     
	     	<ImageView
				android:id="@+id/guide_bottom_right_iv"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="16dp"
	        	android:layout_marginStart="16dp"
				android:src="@drawable/ic_guide3_bottom_right"
				android:scaleType="fitCenter"
				android:contentDescription="@string/contentDescription" />
	        
	    </LinearLayout>
	    
    </LinearLayout>
    
</LinearLayout>
