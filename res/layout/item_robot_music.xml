<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    android:id="@+id/id_left_msg_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/robot_item_bg_selector"
    android:layout_margin="2dp"
    android:orientation="vertical" >
        
    <LinearLayout
        android:id="@+id/id_music_layout"
        android:baselineAligned="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="38dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:background="@drawable/list_news_layout_bg"
        android:padding="4dp"
        android:orientation="horizontal" >
        
	    <RelativeLayout
	        android:layout_marginStart="4dp"
	        android:layout_marginLeft="4dp"
	        android:layout_width="60dp"
            android:layout_height="60dp" >
	        
	        <ImageView
	            android:id="@+id/id_music_img"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:src="@drawable/img_default_music"
	            android:contentDescription="@string/contentDescription" />
	        
	        <ImageView
	            android:id="@+id/id_music_control_img"
	            android:layout_width="40dp"
	            android:layout_height="40dp"
	            android:layout_centerInParent="true"
	            android:src="@drawable/img_music_play"
	            android:contentDescription="@string/contentDescription" />
	        
	    </RelativeLayout>

	    <LinearLayout 
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:layout_marginLeft="4dp"
	        android:layout_marginStart="4dp"
	        android:layout_gravity="center_vertical"
	        android:orientation="vertical" >
	
	        <TextView
	            android:id="@+id/id_music_title"
	        	android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:singleLine="true"
	            android:padding="4dp"
	            android:textSize="14sp"
	            android:textColor="@color/black" />
	        
	        <TextView
	            android:id="@+id/id_music_desc"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:padding="4dp"
	            android:textColor="@color/dark_gray"
	            android:textSize="12sp" />
	        
	    </LinearLayout>
	    
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="4dp"
        android:orientation="horizontal" >
	    
        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="0dp" />        
        
        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="0dp" />
        
        <Button
            android:id="@+id/id_robot_add_btn"
            android:visibility="invisible"
            android:enabled="false"            
            style="@style/Robot_candidate_btn"
            android:text="@string/robot_msg_add"
            android:layout_marginRight="6dp"
            android:layout_marginEnd="6dp"
            android:background="@drawable/btn_robot_add_selector" />
        
        <Button
            android:id="@+id/id_robot_send_btn"
            android:text="@string/robot_msg_send"
            style="@style/Robot_candidate_btn"
            android:background="@drawable/btn_robot_send_selector" />
        
    </LinearLayout>
    
</RelativeLayout>
