<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/header_layout_buttonlayout"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/header_layout_selector"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center" >

    <Button
        android:id="@+id/header_ib_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="@color/base_action_bar_text_color"
        android:textSize="@dimen/base_action_bar_right_text_size"
        android:clickable="false"
        android:focusable="false"
        android:contentDescription="@string/app_name"
        />

</LinearLayout>