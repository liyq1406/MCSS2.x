<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    android:id="@+id/id_left_msg_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/info_item_margin_h"
    android:paddingRight="@dimen/info_item_margin_h"
    android:paddingTop="@dimen/chat_list_vertical_padding"
    android:paddingBottom="@dimen/info_item_margin_h"
    android:background="@color/list_chat_item_bg"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/id_chat_msg_date"
        android:visibility="visible"
        style="@style/list_item_top_date" />
    
    <com.v5kf.mcss.ui.widget.ListLinearLayout
        android:id="@+id/id_news_layout"
        android:baselineAligned="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/chat_list_article_content_hr_matgin"
        android:layout_marginRight="@dimen/chat_list_article_content_hr_matgin"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:background="@drawable/list_news_layout_bg"
        android:orientation="vertical" >
    
    </com.v5kf.mcss.ui.widget.ListLinearLayout>
    
</LinearLayout>
