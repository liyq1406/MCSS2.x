<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    android:id="@+id/id_left_msg_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:background="@drawable/article_item_selector"
    android:orientation="vertical" >
	
    <ImageView
        android:id="@+id/ic_news_img_iv"
    	android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Multi_News_Header_Image"
        android:contentDescription="@string/contentDescription" />
    
    <TextView
        android:id="@+id/id_news_title_text"
        android:text="@string/chat_msg_default"
        android:layout_alignBottom="@id/ic_news_img_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="4dp"
        android:background="@color/transparent_black"
        android:textColor="@color/white"
        android:textSize="14sp" />
	        
    
</RelativeLayout>
