<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    android:id="@+id/id_guide_layout0"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md2x_guide_bg"
    android:orientation="vertical"
    android:weightSum="10" >
        
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6" >
        
        <ImageView
            android:id="@+id/guide_center_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_guide0_center"
            android:scaleType="fitCenter"
            android:contentDescription="@string/contentDescription" />
        
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3" >
        
        <ImageView
            android:id="@+id/guide_bottom_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_guide0_bottom"
            android:scaleType="fitCenter"
            android:contentDescription="@string/contentDescription" />
        
    </RelativeLayout>
    
</LinearLayout>
