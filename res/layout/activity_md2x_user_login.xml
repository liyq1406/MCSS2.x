<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/coordinator_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

	<RelativeLayout
	    android:id="@+id/id_root_layout"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical" >
	
	    <ScrollView
	        android:layout_height="match_parent"
	        android:layout_width="match_parent"
	        android:layout_above="@+id/login_bottom_layout"
	    	android:background="@color/white" >
	        
		    <LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:background="@color/white"
			    android:orientation="vertical" >
		    
			    <FrameLayout
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:minHeight="220dp"
			        android:background="@drawable/v5_login_bg" >
			        
			        <com.v5kf.mcss.ui.widget.CircleImageView
			            android:id="@+id/login_worker_photo"
			            android:visibility="visible"
			            android:layout_height="100dp"
			            android:layout_width="100dp"
			            android:padding="15dp"
			            android:layout_gravity="bottom|center_horizontal"
			            android:layout_marginBottom="40dp"
			            android:src="@drawable/v5_head_face_null"
			            android:contentDescription="@string/contentDescription" />
			        
			    </FrameLayout>
			    
			    <LinearLayout
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:minHeight="50dp"
			        android:layout_marginTop="38dp"
			        android:layout_marginLeft="16dp"
			        android:layout_marginRight="16dp"
			        android:orientation="horizontal" >
			        		
				    <EditText
				        android:id="@+id/site_name_et"
				        android:layout_weight="1"
				        android:layout_width="0dp"
				        android:layout_gravity="center_vertical"
				        android:layout_height="wrap_content"
				        android:padding="4dp"
				        android:singleLine="true"
				        android:hint="@string/sitename_hint"
				        android:background="@drawable/edittext_bg_selector"
				        android:textColor="@color/login_et_text"
				        android:textColorHint="@color/login_et_text_hint"
				        android:textSize="@dimen/login_et_text_size"
				        android:inputType="text" />	
			        
			        <RelativeLayout
			            android:layout_gravity="center_vertical"
			            android:layout_width="40dp"
			            android:layout_height="40dp" >
			            
						<ImageView
						    android:layout_width="wrap_content"
						    android:layout_height="30dp"
						    android:maxWidth="30dp"
						    android:layout_centerVertical="true"
						    android:src="@drawable/v5_login_sitename"
						    android:layout_gravity="center_vertical"
						    android:contentDescription="@string/contentDescription" />
								
					</RelativeLayout>
					
			    </LinearLayout>
			    
			    <View android:layout_width="match_parent"
			        android:layout_height="@dimen/base_line_width_s"
			        android:layout_marginLeft="16dp"
			        android:layout_marginRight="16dp"
					android:background="@color/login_et_border" />
			
			    <LinearLayout
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:minHeight="50dp"
			        android:layout_marginLeft="16dp"
			        android:layout_marginRight="16dp"
			        android:layout_marginTop="8dp"
			        android:orientation="horizontal" >
			        
			        <EditText
				        android:id="@+id/user_name_et"
				        android:hint="@string/username_hint"
				        android:layout_width="0dp"
				        android:layout_height="wrap_content"
				        android:layout_weight="1"
				        android:layout_gravity="center_vertical"
				        android:padding="4dp"
						android:singleLine="true"
						android:background="@drawable/edittext_bg_selector"
						android:textColor="@color/login_et_text"
				        android:textColorHint="@color/login_et_text_hint"
				        android:textSize="@dimen/login_et_text_size"
				        android:inputType="text" />
				    
				    <RelativeLayout
				        android:layout_gravity="center_vertical"
			            android:layout_width="40dp"
			            android:layout_height="40dp" >
						
						<ImageView
						    android:layout_width="wrap_content"
						    android:layout_height="30dp"
						    android:maxWidth="30dp"
						    android:layout_centerVertical="true"
						    android:src="@drawable/v5_login_username"
						    android:layout_gravity="center_vertical"
						    android:contentDescription="@string/contentDescription" />
						
					</RelativeLayout>
				    
			    </LinearLayout>
			    
			    <View android:layout_width="match_parent"
			        android:layout_height="@dimen/base_line_width_s"
			        android:layout_marginLeft="16dp"
			        android:layout_marginRight="16dp"
					android:background="@color/login_et_border" />
			
			    <LinearLayout
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:minHeight="50dp"
			        android:layout_marginLeft="16dp"
			        android:layout_marginRight="16dp"
			        android:layout_marginTop="8dp"
			        android:orientation="horizontal" >
			        
			        <EditText
				        android:id="@+id/user_pwd_et"
				        android:hint="@string/userpwd_hint"
				        android:layout_width="0dp"
				        android:layout_height="wrap_content"
				        android:layout_weight="1"
				        android:layout_gravity="center_vertical"
				        android:padding="4dp"
						android:singleLine="true"
						android:background="@drawable/edittext_bg_selector"
						android:textColor="@color/login_et_text"
				        android:textColorHint="@color/login_et_text_hint"
				        android:textSize="@dimen/login_et_text_size"
				        android:inputType="textPassword" />
				    
				    <RelativeLayout
				        android:layout_gravity="center_vertical"
			            android:layout_width="40dp"
			            android:layout_height="40dp" >
						
						<ImageView
						    android:layout_width="wrap_content"
						    android:layout_height="30dp"
						    android:maxWidth="30dp"
						    android:layout_centerVertical="true"
						    android:src="@drawable/v5_login_password"
						    android:layout_gravity="center_vertical"
						    android:contentDescription="@string/contentDescription" />
						
					</RelativeLayout>
				    
			    </LinearLayout>
			    
			    <View android:layout_width="match_parent"
			        android:layout_height="@dimen/base_line_width_s"
			        android:layout_marginLeft="16dp"
			        android:layout_marginRight="16dp"
					android:background="@color/login_et_border" />
			    
			    <LinearLayout
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:minHeight="@dimen/large_item_divider_height"
			        android:orientation="horizontal"
			        android:padding="8dp"
			        android:gravity="end" >
			    	
			        <TextView
			            android:id="@+id/account_tips"
			            android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/no_login_account"
						android:textColor="#AAAAAA"
						android:textSize="@dimen/login_et_text_size" />
			        
			    </LinearLayout>
		        
		    </LinearLayout>
	    </ScrollView>
		
	    <LinearLayout
	        android:id="@+id/login_bottom_layout"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
		    android:layout_alignParentBottom="true"
		    android:padding="16dp"
		    android:background="@android:color/white"
	        android:orientation="horizontal" >
	        
	        <Button
		        android:id="@+id/login_btn"
		        android:onClick="onUserLogin"
		        android:text="@string/login_text"
		        style="@style/Positive_btn"
		        android:background="@drawable/btn_positive_selector" />
	        
	    </LinearLayout>
	    
	</RelativeLayout>
</FrameLayout><!-- android.support.design.widget.CoordinatorLayout -->