<resources>

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style name="AppTheme" parent="AppTheme.Base">
        <item name="actionBarStyle">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:actionBarStyle">@style/ThemeOverlay.AppCompat.Light</item>
        
        <!-- API 23 theme customizations can go here. -->
        <item name="windowActionBar">false</item>
  		<item name="windowNoTitle">true</item>
  		
        <!-- Navigation bar color
        <item name="android:windowTranslucentStatus">true</item>
         -->
        <item name="android:navigationBarColor">@color/main_color</item>
    	<item name="android:statusBarColor">@android:color/transparent</item>
    	<item name="android:windowIsTranslucent">true</item>
    	
  		<item name="android:windowLightStatusBar">true</item>
    </style>

</resources>